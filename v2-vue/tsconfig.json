{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },


    // customizations
    "noImplicitAny": false,
    "noImplicitThis": false,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization" : false

  },
  "types": [
    "@types/node",
    "@nuxt/types",
    "@nuxtjs/vuetify"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "lambda"
  ]
}
